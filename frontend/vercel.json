{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    // 1. Primero, archivos estáticos con extensión (.js, .css, .png, etc.)
    {
      "src": "/(.*\\.\\w+$)",  // Regex: captura archivos con extensión
      "dest": "/$0",           // Sirve el archivo real
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    // 2. Después, todo lo demás a index.html (para React Router)
    {
      "src": "/.*",            // Cualquier otra cosa
      "dest": "/index.html",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    }
  ]
}